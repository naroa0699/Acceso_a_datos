import java.sql.*;

public class ContarFilas {
    public static void main(String[] args) {
        String url = "jdbc:mysql://localhost:3306/miBD";
        String user = "root";
        String pass = "tu_password";

        try (Connection conn = DriverManager.getConnection(url, user, pass)) {

            // Creamos un Statement SCROLLABLE para poder mover el cursor libremente
            Statement st = conn.createStatement(
                    ResultSet.TYPE_SCROLL_INSENSITIVE,
                    ResultSet.CONCUR_READ_ONLY);

            // Cualquier consulta
            ResultSet rs = st.executeQuery("SELECT * FROM empleados");

            // Movemos el cursor a la última fila
            rs.last();

            // Obtenemos el número de fila => número total de filas
            int totalFilas = rs.getRow();

            System.out.println("Número de filas encontradas: " + totalFilas);

            // Volvemos al principio (si luego quisiéramos procesarlo)
            rs.beforeFirst();

            rs.close();
            st.close();

        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
